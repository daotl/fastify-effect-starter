{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "tsPlusConfig": "./tsplus.config.json",
    "lib": [
      "esnext"
    ],
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "esModuleInterop": true,
    // temp disbaled to support ts-plus ops
    "importsNotUsedAsValues": "preserve",
    "baseUrl": "./",
    "rootDir": "./_src",
    // keep in here, cause madge can't detect it from extended tsconfig
    "moduleResolution": "Node16",
    "paths": {
      "~/*": [
        "_src/*"
      ],
      "@fastify-effect-starter/main/*": [
        "_src/*"
      ]
    },
    // "types": ["./types/modules", "node"],
    "outDir": "./dist",
    "transformers": [
      // Transform paths in output .js files
      {
        "name": "ts-transform-paths"
      },
      // Transform paths in output .d.ts files (Include this line if you output declarations files)
      {
        "name": "ts-transform-paths",
        "position": "afterDeclaration"
      },
      {
        "name": "@effect/language-service/transformer",
        "trace": {
          "exclude": [
            "**/*.ts"
          ]
        }
        //"debug": {}
      }
    ]
  },
  "include": [
    "./_src/**/*.ts",
    "./_src/**/*.mts",
    "_src/main.ts.bk",
  ],
  "exclude": [
    "**/__template.ts",
    "./dist",
    "*.test.ts",
    "node_modules",
    "build",
    "lib",
    "dist",
    "**/*.d.ts.map",
    ".git",
    ".data",
    "**/*.tmp"
  ],
  "ts-node": {
    "files": true,
    "require": [
      "tsconfig-paths/register"
    ]
    // "compilerOptions": {
    //   "module": "CommonJS"
    // }
  }
}
