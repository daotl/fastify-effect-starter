{
  "configurations": [
    {
      "name": "Debug",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "ts-node-esm",
      // "runtimeArgs": ["--loader", "ts-node/esm"],
      "program": "${workspaceFolder}/_src/main.ts",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Debug Attach",
      "port": 9229,
      "cwd": "${workspaceFolder}",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "sourceMaps": true
    }
  ]
}
