{
  "name": "@fastify-effect-starter/main",
  "description": "Fastify + Effect starter template for DAOT projects",
  "private": true,
  "type": "module",
  "main": "./dist/main.js",
  "packageManager": "pnpm@8.8.0",
  "pnpm": {
    "patchedDependencies": {
      "@effect/language-service@0.0.19": "patches/@effect__language-service@0.0.19.patch",
      "@typescript-eslint/scope-manager@6.7.3": "patches/@typescript-eslint__scope-manager@6.7.3.patch",
      "eslint-plugin-codegen@0.17.0": "patches/eslint-plugin-codegen@0.17.0.patch",
      "date-fns@2.29.3": "patches/date-fns@2.29.3.patch",
      "@fp-ts/optic@0.10.0": "patches/@fp-ts__optic@0.10.0.patch"
    }
  },
  "scripts": {
    "circular": "pnpm circular:src && pnpm circular:dist",
    "circular:src": "madge --circular --ts-config ./tsconfig.json --extensions ts ./_src",
    "circular:dist": "madge --circular --extensions js ./dist",
    "clean": "rm -rf dist _test/dist _lib/**/dist",
    "clean:removed": "sh scripts/clean-dist.sh",
    "build": "pnpm clean:removed && NODE_OPTIONS=--max-old-space-size=8192 tsc -p tsconfig.src.json",
    "rebuild": "pnpm clean && pnpm build",
    "build:watch": "pnpm build --watch",
    "build:watch2": "pnpm clean:dist && NODE_OPTIONS=--max-old-space-size=8192 tsc -w",
    "compile": "NODE_OPTIONS=--max-old-space-size=8192 tsc --noEmit",
    "lint": "biome format . && biome check .",
    "lint:fix": "biome format --write . && biome check --apply .",
    "eslint": "NODE_OPTIONS=--max-old-space-size=6144 ESLINT_TS=1 eslint _src/**/*.ts _test/**/*.ts",
    "eslint:watch": "ESLINT_TS=1 esw -w --changed --clear --ext ts,tsx _src/** _test/**",
    "test": "vitest",
    "test:run": "pnpm run test run",
    "testsuite": "pnpm circular && pnpm run test:run && pnpm lint",
    "dev": "NODE_ENV=development nodemon --signal SIGTERM --exec pnpm dev:compiled",
    "dev:compiled": "pnpm start:compiled | scripts/humanlog.sh",
    "start": "pnpm start:compiled",
    "start:compiled": "dotenv -- node --experimental-specifier-resolution=node -r source-map-support/register ./dist/main.js",
    "edgedb:migration:create": "docker exec fastify-effect-starter-edgedb-1 edgedb -I fastify_effect_starter migration create",
    "edgedb:migrate": "docker exec fastify-effect-starter-edgedb-1 edgedb -I fastify_effect_starter migrate",
    "edgedb:gen": "concurrently 'pnpm edgedb:gen:interfaces' 'pnpm edgedb:gen:edgeql-js'",
    "edgedb:gen:interfaces": "dotenv -- npx @edgedb/generate interfaces --force-overwrite --file _src/models/generated/interfaces.ts && npx ts-to-effect-schema --config edgedb --esm --skipValidation",
    "edgedb:gen:edgeql-js": "mkdir -p dbschema/edgeql-js/generated && dotenv -- npx @edgedb/generate edgeql-js --target cjs --force-overwrite --out dbschema/edgeql-js/generated",
    "edgedb:seed": "dotenv -- node dist/scripts/seed.js",
    "up-all": "pnpm --recursive update",
    "up-ncu": "pnpm run update && pnpm i",
    "update": "ncu -u && pnpm -r ncu -u",
    "ncu": "ncu",
    "nnm": "find . -name 'node_modules' -type d -prune -exec rimraf '{}' + && pnpm i",
    "preinstall": "npx only-allow pnpm"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./_cjs/index.cjs"
      }
    },
    "./*": {
      "import": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      },
      "require": {
        "types": "./dist/*.d.ts",
        "default": "./_cjs/*.cjs"
      }
    }
  },
  "resolutions": {
    "@effect/schema": "0.42.0",
    "@trpc/client": "10.26.0",
    "@trpc/server": "daotl/trpc#f40bc9dc6bc14827802f46cc377cf4fa164ccb05",
    "@types/node": "~20.8.3",
    "date-fns": "2.29.3",
    "effect": "2.0.0-next.47",
    "http-proxy": "npm:http-proxy-node16@1.0.0"
  },
  "dependencies": {
    "@daotl-effect/fastify": "^0.0.9",
    "@daotl-effect/prelude": "^0.0.20",
    "@daotl-effect/trpc": "^0.0.20",
    "@effect-app/core": "^0.58.4",
    "@effect-app/infra": "^0.75.4",
    "@effect-app/infra-adapters": "^0.51.4",
    "@effect-app/prelude": "^0.60.4",
    "@effect/schema": "^0.42.0",
    "@fastify/caching": "^8.3.0",
    "@fastify/cookie": "^9.1.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/csrf-protection": "^6.3.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/middie": "^8.3.0",
    "@fastify/request-context": "^5.0.0",
    "@fastify/session": "^10.5.0",
    "@fastify/static": "^6.11.2",
    "@fastify/swagger": "^8.11.0",
    "@fastify/swagger-ui": "^1.10.0",
    "@fastify/websocket": "^8.2.0",
    "@trpc/client": "10.26.0",
    "@trpc/server": "daotl/trpc#f40bc9dc6bc14827802f46cc377cf4fa164ccb05",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "edgedb": "^1.3.6",
    "edgeql-js": "workspace:*",
    "effect": "^2.0.0-next.47",
    "fastify": "^4.23.2",
    "fastify-cors": "^6.1.0",
    "fastify-healthcheck": "^4.4.0",
    "fastify-helmet": "^7.1.0",
    "fastify-static": "^4.7.0",
    "fastify-type-provider-effect-schema": "^0.0.3",
    "http-status-codes": "^2.3.0",
    "pino": "^8.15.6",
    "source-map-support": "^0.5.21",
    "superjson": "^1.13.3",
    "tlru": "^1.0.2",
    "trpc-playground": "^1.0.4",
    "trpc-shield": "^0.4.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.2.2",
    "@daotl/biome-config": "0.0.1",
    "@edgedb/generate": "^0.3.3",
    "@effect-app/cli": "^0.17.0",
    "@effect-app/compiler": "^0.28.0",
    "@effect/language-service": "0.0.19",
    "@tsconfig/esm": "^1.0.5",
    "@tsconfig/node20": "^20.1.2",
    "@tsconfig/strictest": "^2.0.2",
    "@tsplus/installer": "0.0.179",
    "@types/connect": "^3.4.36",
    "@types/cookie": "^0.5.2",
    "@types/fs-extra": "^11.0.2",
    "@types/node": "~20.8.3",
    "@typescript-eslint/eslint-plugin": "6.7.3",
    "@typescript-eslint/parser": "6.7.3",
    "@typescript-eslint/scope-manager": "6.7.3",
    "babel-plugin-replace-import-extension": "^1.1.3",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "enhanced-resolve": "^5.15.0",
    "eslint": "^8.51.0",
    "eslint-plugin-codegen": "^0.17.0",
    "eslint-watch": "^8.0.0",
    "madge": "^6.1.0",
    "nodemon": "^3.0.1",
    "npm-check-updates": "^16.14.5",
    "prebuild-install": "^7.1.1",
    "ts-node": "^10.9.1",
    "ts-to-effect-schema": "^0.0.10",
    "ts-transform-paths": "^3.0.0",
    "tsc-watch": "^6.0.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "npm:@effect-app/typescript@5.3.0-tsplus.202310052",
    "typescript-transform-paths": "^3.4.6",
    "unplugin-auto-import": "^0.16.6",
    "vitest": "^0.34.6"
  }
}
