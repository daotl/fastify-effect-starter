{
  "name": "@fastify-effect-starter/main",
  "version": "0.0.1",
  "description": "Node.js + Effect starter template for DAOT projects",
  "type": "module",
  "private": true,
  "license": "MIT",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js"
  },
  "scripts": {
    "circular": "pnpm circular:src && pnpm circular:dist",
    "circular:src": "madge --circular --ts-config ./tsconfig.json --extensions ts ./_src",
    "circular:dist": "madge --circular --extensions js ./dist",
    "clean:all": "concurrently 'pnpm clean' 'pnpm clean:test'",
    "clean:src": "rimraf dist",
    "clean:test": "rimraf _test/dist",
    "build:all": "pnpm clean:all && NODE_OPTIONS=--max-old-space-size=6144 tsc --build",
    "build": "pnpm clean:src && NODE_OPTIONS=--max-old-space-size=6144 tsc -p tsconfig.src.json",
    "build:test": "pnpm clean:test && NODE_OPTIONS=--max-old-space-size=6144 tsc -p tsconfig.test.json",
    "build:watch": "pnpm build --watch",
    "build:watch2": "pnpm clean && NODE_OPTIONS=--max-old-space-size=6144 tsc -w",
    "compile": "NODE_OPTIONS=--max-old-space-size=6144 tsc --noEmit",
    "lint": "rome format . && rome check .",
    "lint:fix": "rome format --write . && rome check --apply .",
    "eslint": "NODE_OPTIONS=--max-old-space-size=6144 ESLINT_TS=1 eslint _src/** _test/**",
    "eslint:watch": "ESLINT_TS=1 esw -w --changed --clear --ext ts,tsx _src/** _test/**",
    "test": "vitest",
    "test:run": "pnpm run test run",
    "testsuite": "pnpm circular && pnpm run test:run && pnpm lint",
    "dev": "NODE_ENV=development dotenv -- ts-node-esm -P tsconfig.src.json _src/main.ts",
    "dev:compiled": "NODE_ENV=development dotenv -- pnpm start:compiled | scripts/humanlog.sh",
    "dev:compiled:watch": "nodemon --exec pnpm dev:compiled",
    "start": "pnpm start:compiled",
    "start:compiled": "dotenv -- node --experimental-specifier-resolution=node -r source-map-support/register ./dist/main.js",
    "edgedb:migration:create": "docker exec fastify-effect-starter-edgedb-1 edgedb -I fastify_effect_starter migration create",
    "edgedb:migrate": "docker exec fastify-effect-starter-edgedb-1 edgedb -I fastify_effect_starter migrate",
    "edgedb:gen": "concurrently 'pnpm edgedb:gen:interfaces' 'pnpm edgedb:gen:edgeql-js' 'pnpm edgedb:gen:zod'",
    "edgedb:gen:interfaces": "dotenv -- npx @edgedb/generate interfaces --force-overwrite --file _src/models/generated/interfaces.ts && npx ts-to-zod --config edgedb --skipValidation",
    "edgedb:gen:edgeql-js": "mkdir -p dbschema/edgeql-js/generated && dotenv -- npx @edgedb/generate edgeql-js --target cjs --force-overwrite --out dbschema/edgeql-js/generated",
    "edgedb:gen:zod": "dotenv -- npx edgedb-zod --outputDir _src/models/generated/zod",
    "edgedb:seed": "dotenv -- ts-node-esm -P tsconfig.src.json _src/scripts/seed.ts",
    "ncu": "ncu",
    "nnm": "find . -name 'node_modules' -type d -prune -exec rimraf '{}' + && pnpm i",
    "preinstall": "npx only-allow pnpm"
  },
  "pnpm": {
    "patchedDependencies": {
      "@effect/language-service@0.0.19": "patches/@effect__language-service@0.0.19.patch",
      "@typescript-eslint/scope-manager@5.52.0": "patches/@typescript-eslint__scope-manager@5.52.0.patch",
      "eslint-plugin-codegen@0.17.0": "patches/eslint-plugin-codegen@0.17.0.patch",
      "typescript@5.0.0-tsplus.20230205": "patches/typescript@5.0.0-tsplus.20230205.patch"
    }
  },
  "dependencies": {
    "@effect-app/core": "^0.24.1",
    "@effect-app/infra": "^0.26.3",
    "@effect-app/infra-adapters": "^0.20.8",
    "@effect-app/prelude": "^0.21.8",
    "@effect-app/schema": "^0.18.7",
    "@effect/data": "^0.1.2",
    "@effect/io": "^0.1.12",
    "@fastify/caching": "^8.2.0",
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.2.0",
    "@fastify/csrf-protection": "^6.1.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^10.1.0",
    "@fastify/middie": "^8.1.0",
    "@fastify/request-context": "^4.2.0",
    "@fastify/session": "^10.1.1",
    "@fastify/static": "^6.9.0",
    "@fastify/swagger": "^8.3.1",
    "@fastify/swagger-ui": "^1.4.0",
    "@fastify/websocket": "^7.1.2",
    "@fastify-effect-starter/prelude": "workspace:*",
    "@fp-ts/core": "^0.2.1",
    "@trpc/client": "^10.12.0",
    "@trpc/server": "^10.12.0",
    "edgedb": "^1.0.2",
    "edgeql-js": "workspace:*",
    "fastify": "^4.13.0",
    "fastify-cors": "^6.1.0",
    "fastify-healthcheck": "^4.4.0",
    "fastify-helmet": "^7.1.0",
    "fastify-static": "^4.7.0",
    "fastify-type-provider-zod": "^1.1.9",
    "http-status-codes": "^2.2.0",
    "remeda": "^1.6.2",
    "source-map-support": "^0.5.21",
    "superjson": "^1.12.2",
    "tlru": "^1.0.2",
    "ws": "^8.12.1",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@daotl/effect-app-eslint-codegen-model": "^0.11.0",
    "@daotl/eslint-config": "^0.3.33",
    "@daotl/rome-config": "0.0.1-alpha.4",
    "@daotl/tsconfig": "^0.1.2",
    "@dprint/typescript": "^0.83.0",
    "@edgedb/generate": "^0.0.7",
    "@effect-app/cli": "^0.3.1",
    "@effect-app/compiler": "^0.12.0",
    "@effect-app/core": "^0.24.1",
    "@effect-app/prelude": "^0.21.8",
    "@effect/language-service": "^0.0.19",
    "@tsconfig/node18": "^1.0.1",
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "@tsplus/installer": "0.0.170",
    "@types/connect": "^3.4.35",
    "@types/cookie": "^0.5.1",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash": "^4.14.191",
    "@types/node": "~18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "@typescript-eslint/scope-manager": "^5.52.0",
    "babel-plugin-replace-import-extension": "^1.1.3",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.0.0",
    "dprint": "^0.34.5",
    "edgedb-zod": "1.0.0-beta4",
    "enhanced-resolve": "^5.12.0",
    "eslint": "^8.34.0",
    "eslint-plugin-codegen": "^0.17.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-watch": "^8.0.0",
    "madge": "^6.0.0",
    "nodemon": "^2.0.20",
    "npm-check-updates": "^16.7.4",
    "patch-package": "^6.5.1",
    "prebuild-install": "^7.1.1",
    "rome": "^11.0.0",
    "ts-node": "^10.9.1",
    "ts-to-zod": "daotl/ts-to-zod#0f238da3e58f295bb8a03da96a0414cc43757580",
    "ts-transform-paths": "^3.0.0",
    "tsc-watch": "^6.0.0",
    "tsconfig-paths": "^4.1.2",
    "type-fest": "^3.6.0",
    "typescript": "https://cdn.jsdelivr.net/npm/@tsplus/installer@0.0.170/compiler/typescript.tgz",
    "typescript-transform-paths": "^3.4.6",
    "unplugin-auto-import": "^0.14.3",
    "vitest": "^0.28.5"
  }
}
